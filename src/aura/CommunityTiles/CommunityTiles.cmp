<aura:component implements="forceCommunity:availableForAllPageTypes,flexipage:availableForAllPageTypes">
    <ltng:require styles="/resource/benslds" />
    <aura:attribute name="prefix" type="String" />
   
    <aura:attribute name="NumberOfBlocks" type="String" default="9"/>
    
    <aura:attribute name="Title1" type="String" default="Title"/>
    <aura:attribute name="Title2" type="String" default=""/>
    <aura:attribute name="Title3" type="String" default=""/>
    <aura:attribute name="Title4" type="String" default=""/>
    <aura:attribute name="Title5" type="String" default=""/>
    <aura:attribute name="Title6" type="String" default=""/>
    <aura:attribute name="Title7" type="String" default=""/>
    <aura:attribute name="Title8" type="String" default=""/>
    <aura:attribute name="Title9" type="String" default=""/>
    
    <aura:attribute name="Link1" type="String" default="https://www.google.com"/>
    <aura:attribute name="Link2" type="String" default=""/>
    <aura:attribute name="Link3" type="String" default=""/>
    <aura:attribute name="Link4" type="String" default=""/>
    <aura:attribute name="Link5" type="String" default=""/>
